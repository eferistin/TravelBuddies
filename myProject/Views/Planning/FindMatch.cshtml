}

@*
   Displays a list of all the approved matches.
*@
<h1>Hello @ViewBag.name, the following activities matches your plan criteria:</h1>
<br /><br />


    @foreach (var findplan in ViewBag.Matches)
    {
        @for( int i =1; i<ViewBag.Matches.Count; i++ )
        { 
            <span><b> @i</b></span>
            <p>@findplan.Activity with @findplan.User</p>

            <span>
                <button type="button" asp-controller="ApprovedMatches" asp-action="Index" id=@findplan.ID>Accept</button>
                &nbsp;&nbsp;&nbsp;

                <button type="button" asp-controller="ApprovedMatches" asp-action="Decline" id=@findplan.ID>Decline</button>
            </span>

            <br />
        }
    }

